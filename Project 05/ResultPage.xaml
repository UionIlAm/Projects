<Page x:Class="Project_05.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_05"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="792"
      Title="ResultPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="198*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>

        <Label Content="Номера счастливых билетов" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" FontSize="16" Margin="5,5,5,-25"/>

        <ListView x:Name="ResultList" HorizontalContentAlignment="Center" Margin="100,0,100,0"  Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" FontSize="20"/>

        <Button x:Name="Back" Content="Вернуться назад" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="9" Click="Back_Click"/>
    </Grid>
</Page>
